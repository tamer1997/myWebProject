
<div class="createPostBody">
    
    <div class="containerError">
        {{#if errors.length}}
            <p>Couldn't Edit the post because:</p>
            <ul>
                {{#each errors}}
                    <li>{{this}}</li>
                {{/each}}
            </ul> 
        {{/if}}
    </div>
    
    {{#if posts}}
        <form action="/posts/editPost/{{posts.id}}" method="POST">
            <h1>Edit Post</h1>
            <br><br>
            <label class="form-label" for="title">Title</label>
            <input class="form-input" type="text" name="title" value="{{posts.title}}" required>
            <br> <br>
            Description:<br>
            <textarea class="description" name="description">{{posts.description}}</textarea>
            <br>
            <input type="hidden" name="_csrf" value="{{token}}">
            <br><hr>
            <button class = "btn" id ="sendBtn"> Edit </button>
        </form> 
    {{/if}}
</div>
